<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<template id="report_pos_order_by_date">
		    <t t-call="report.html_container">
	            <t t-call="report.external_layout">
	                <div class="page">
	                    <h2>POS Order by Date Report</h2><br/><br/>
	                    <span>POS Terminal: </span>
	                    <span t-esc="data['form']['pos_config_id'][1]"/>
	                    <table class="table table-condensed">
	                    	<thead>
	                    		<tr>
			                    	<th>Date</th>
			                    	<th>Cash</th>
			                    	<th>Card</th>
			                    	<th>Subtotal</th>
			                    	<th>Tax</th>
			                    	<th>Total</th>
			                    </tr>
			                </thead>
		                    <tbody class="sale_tbody">
			                    <tr t-foreach="get_totals(data)" t-as="o">
			                    	<td>
			                    		<span t-esc="o['date']"/>
			                    	</td>
			                    	<td>
			                    		<span t-esc="o['cash']"/>
			                    	</td>
			                    	<td>
			                    		<span t-esc="o['bank']"/>
			                    	</td>
			                    	<td>
			                    		<span t-esc="o['subtotal']"/>
			                    	</td>
			                    	<td>
			                    		<span t-esc="o['tax']"/>
			                    	</td>
			                    	<td>
			                    		<span t-esc="o['total']"/>
			                    	</td>
			                    </tr>
		                	</tbody>
	                    </table>
	                </div>
	            </t>
		    </t>
		</template>
		<report
		    id="pos_order_by_date_report"
		    model="pos.order"
		    string="POS sales by date"
		    report_type="qweb-pdf"
		    name="pos_order_report.report_pos_order_by_date"
		    file="pos_order_report.report_pos_order_by_date"
		    menu="False"
		/>
	</data>
</openerp>