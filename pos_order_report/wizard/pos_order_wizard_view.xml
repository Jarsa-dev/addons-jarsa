<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="pos_order_wizard_view" model="ir.ui.view">
            <field name="name">POS Order Wizard</field>
            <field name="model">pos.order.wizard</field>
            <field name="arch" type="xml">
            <form string="Select Period">
                <header>
                    <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </header>
                <group col="4">
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <newline/>
                    <field name="warehouse_id"/>
                </group>
            </form>
            </field>
        </record>

        <record id="action_pos_order_wizard" model="ir.actions.act_window">
            <field name="name">POS Order Wizard Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="pos_order_wizard_view"/>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="pos_order_wizard_value">
            <field name="model_id" ref="point_of_sale.model_pos_order" />
            <field name="name">Orders by Date</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_pos_order_wizard'))" />
            <field name="key">action</field>
            <field name="model">pos.order</field>
        </record>

    </data>
</openerp>