<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model='ir.ui.view' id='sync_cva_wizard_form'>
            <field name='name'>sync_cva_wizard.form</field>
            <field name='model'>cva.sync</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Sync with CVA'>
                    <header>
                    </header>
                    <sheet>
                        <h1>
                            <label string='Sync with CVA'/>
                        </h1>
                    </sheet>
                    <footer>
                        <button name="get_all_products" type="object"
                                string="Get all products" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="launch_the_wizard"
                    name="Sync with CVA"
                    src_model="product.template"
                    res_model="cva.sync"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
    </data>
</openerp>