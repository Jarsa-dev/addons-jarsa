<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="helpdesk_signature_remover_form" model="ir.ui.view">
			<field name="name">helpdesk_signature_remover.form</field>
			<field name="model">signature.remover</field>
			<field name="arch" type="xml">
				<form string="Signature">
					<header/>
					<sheet>
						<group>
							<field name="name"/>
							<field name="signature"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record model='ir.ui.view' id='helpdesk_signature_remover_tree'>
			<field name='name'>helpdesk_signature_remover.tree</field>
			<field name='model'>signature.remover</field>
			<field name='arch' type='xml'>
				<tree string='Signatures'>
					<field name='name'/>
					<field name="signature"/>
				</tree>
			</field>
		</record>
		<record id="action_signature" model="ir.actions.act_window">
			<field name="name">Signature</field>
			<field name="res_model">signature.remover</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		<menuitem action="action_signature" groups="base.group_no_one" id="helpdesk_signature" parent="helpdesk.helpdesk_menu_config" sequence="1"/>
	</data>
</odoo>