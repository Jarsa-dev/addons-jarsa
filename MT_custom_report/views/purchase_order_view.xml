<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Formato de Papel -->
        <record id="purchase_paperformat" model="report.paperformat">
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="header_spacing">35</field>
            <field name="margin_top">10</field>
            <field name="margin_right">7</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="header_line">False</field>
            <field name="name">US Letter Invoice</field>
            <field name="orientation">Portrait</field>
            <field name="dpi">90</field>
            <field name="default">True</field>
            <field name="format">Letter</field>
        </record>
    </data>
    <data>
        <!-- QWeb Reports -->
        <report attachment_use="True" file="MT_custom_report.report_purchase_order_custom" 
            header="False" id="purchase_order_custom" 
            model="purchase.order" 
            name="MT_custom_report.report_purchase_order_custom" 
            report_type="qweb-pdf" string="Purchase Order" 
            usage="default"/>
        <record id="purchase_order_custom" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="MT_custom_report.purchase_paperformat"/>
        </record>
    </data>
</openerp>