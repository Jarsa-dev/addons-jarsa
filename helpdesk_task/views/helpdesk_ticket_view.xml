<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record model='ir.ui.view' id='view_help_desk_ticket_assignation_form'>
            <field name='name'>view.help.desk.ticket.assignation.form</field>
            <field name='model'>helpdesk.ticket</field>
            <field name='inherit_id' ref='helpdesk.helpdesk_ticket_view_form'/>
            <field name='arch' type='xml'>
                <button name='assign_ticket_to_self' position='after'>
                   <button type='action' name='%(helpdesk_task.ticket_assignation_wizard_act)d' string='Task Assignation' class='oe_highlight' icon='fa-child'/>
                </button>
                <div name='button_box' position='inside'>
                    <button class='oe_stat_button' icon='fa-tasks' name='show_task' type='object'>
                        <field name="nbr_tasks" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
