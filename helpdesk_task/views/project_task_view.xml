<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record model='ir.ui.view' id='view_project_task_helpdesk_form'>
            <field name='name'>view.project.task.helpdesk.form</field>
            <field name='model'>project.task</field>
            <field name='inherit_id' ref='project.view_task_form2'/>
            <field name='arch' type='xml'>
                <field name='priority' position='replace'>
                    <field name='priority' widget='priority'/>
                </field>
                <div name='button_box' position='inside'>
                    <button class='oe_stat_button' icon='fa-tags' name='show_tickets' type='object'>
                        <field name="nbr_tickets" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
