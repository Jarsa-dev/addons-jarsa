<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <record id='ticket_assignation_wizard_view' model='ir.ui.view'>
            <field name='name'>ticket.assignation.wizard.view</field>
            <field name='model'>ticket.assignation.wizard</field>
            <field name='arch' type='xml'>
                <form string='Create / Assign Ticket'>
                    <header class='text-center'>
                        <separator string='Ticket Assignation'/>
                    </header>
                    <group>
                        <field name='action_type' widget='radio'/>
                        <field name='project_id' required='1'/>
                        <field name='task_id' attrs='{"invisible": [("action_type", "=", "create")], "required": [("action_type", "=", "add")]}'/>
                        <field name='user_id'/>
                        <field name='priority' widget='priority'/>
                        <field name='task_ids' invisible='1'/>
                   </group>
                    <footer>
                        <button name='ticket_assign' class='oe_highlight' string='Confirm' type='object'/>
                        <button special='cancel' string='Cancel'/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id='ticket_assignation_wizard_act'
                    name='Assign Ticket'
                    src_model='helpdesk.ticket'
                    res_model='ticket.assignation.wizard'
                    view_mode='form'
                    target='new'
                    />
    </data>
</odoo>
