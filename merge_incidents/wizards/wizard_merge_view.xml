<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="view_wizard_merge" model="ir.ui.view">
			<field name="name">Merge Incidents</field>
			<field name="model">wizard.merge</field>
			<field name="arch" type="xml">
				<form version="9.0">
					<sheet>
						<group>
							<field name="incident" colspan="4"/><br/>
							<separator for="incident_ids" string="Incidents" colspan="4" orientation="vertical"/><br/>
							<field name="incident_ids" nolabel="1" colspan="4">
								<tree create="false" delete="false">
									<field name="name"/>
									<field name="user_id"/>
									<field name="priority"/>
									<field name="stage_id"/>
								</tree>
							</field>
						</group>
					</sheet>
					<footer>
						<button class="oe_highlight" name="merge" string="Merge" type="object"/>
						<button special="cancel" string="Cancel"/>
					</footer>
				</form>
			</field>
		</record>
		<record id="action_wizard_merge" model="ir.actions.act_window">
			<field name="name">Export Polizas</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wizard.merge</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		<act_window id="action_helpdesk_merge_incidents" key2="client_action_multi" name="Merge Incidents" res_model="wizard.merge" src_model="helpdesk.ticket" target="new" view_mode="form"/>
	</data>
</odoo>