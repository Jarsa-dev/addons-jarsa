<?xml version="1.0"?>
<odoo>
	<record id="action_email_close_ticket" model="ir.actions.server">
		<field name="name">Close Ticket</field>
		<field name="model_id" ref="helpdesk_close_tickets.model_helpdesk_ticket"/>
		<field name="condition">True</field>
		<field name="type">ir.actions.server</field>
		<field name="state">email</field>
		<field name="sequence">99</field>
	</record>
	<record id="action_close_ticket" model="ir.actions.server">
		<field name="name">Close Ticket</field>
		<field name="model_id" ref="helpdesk_close_tickets.model_helpdesk_ticket"/>
		<field name="condition">True</field>
		<field name="type">ir.actions.server</field>
		<field name="state">code</field>
		<field name="code">
			stage_solved = env['helpdesk.stage'].search([('is_close', '=', True)], order='sequence', limit=1).id
			for record in records:
				record.stage_id = stage_solved
		</field>
	</record>
</odoo>